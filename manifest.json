{
  "manifest_version": 3,
  "name": "BotGuage recorder 2.0",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "desktopCapture",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
